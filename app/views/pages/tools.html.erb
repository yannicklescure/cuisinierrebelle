<div class="tools">
  <div class="d-flex flex-column align-items-center mt-5 mb-3">
    <% if user_signed_in? && current_user.admin %>
      <% if client.device_type.match(/desktop/) %>
        <%= link_to t('.switch_view'), "#{tools_path()}?user_view=#{!@user_view}", class: 'text-decoration-none' %>
      <% end %>
      <% if !@user_view %>
        <%= link_to t('.new_product'), new_product_path(), id: 'new_product', class: 'btn btn-secondary' %>
      <% end %>
    <% end %>
    <% if @user_view %>
    <h1><%= t('.tools') %></h1>
    <div id="tools-alert" class="row justify-content-center p-3 m-0">
      <div class="col col-md-6">
        <div class="card pb-2" style="background-color: #fef3cd; color: #7e6a2f;">
          <div class="d-flex justify-content-between align-items-center">
            <div class="px-3 font-weight-bold"><%= t('.disclaimer') %></div>
            <div id="tools-alert-btn" class="btn btn-sm"><i class="fas fa-times"></i></div>
          </div>
          <div class="d-flex flex-column">
            <div class="px-3"><%= t('.disclaimer_html') %></div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row py-3 m-0">
    <% @products.order('updated_at DESC').each do |product| %>
      <%= render 'shared/card-product', product: product, user_view: @user_view %>
    <% end %>
  </div>
</div>
