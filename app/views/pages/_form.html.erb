<div class="container my-5">
  <%= simple_form_for(@page) do |f| %>
    <%= f.input :title, label: t('.title'), input_html: { maxlength: 100 } %>
    <%= f.input :content, label: t('.content'), input_html: { rows: 10 }  %>
    <%= f.button :submit, t('.create_page'), class: "btn btn-secondary" %>
  <% end %>
</div>
