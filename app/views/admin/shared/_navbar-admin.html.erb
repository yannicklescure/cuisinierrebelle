<div class="navbar navbar-light sticky-top p-0 pt-3" style="top:59px">
  <div class="navbar-nav d-flex w-100 flex-column align-items-start admin">
    <% link_class = 'd-flex w-100 nav-item align-items-center' %>
    <%= link_to admin_path(), id: 'dashboard', class: link_class, style: 'padding: 0 0 12px 0;' do %>
      <div class="text-center" style="width: 32px">
        <i class="fas fa-cog"></i>
      </div>
      <%= t('.dashboard') %>
    <% end %>
    <%= link_to admin_users_path(), id: 'users', class: link_class, style: 'padding: 12px 0;' do %>
      <div class="text-center" style="width: 32px">
        <i class="fas fa-users"></i>
      </div>
      <%= t('.users') %>
    <% end %>
    <%= link_to admin_recipes_path(), id: 'recipes', class: link_class, style: 'padding: 12px 0;' do %>
      <div class="text-center" style="width: 32px">
        <i class="fas fa-utensils"></i>
      </div>
      <%= t('.recipes') %>
    <% end %>
    <%= link_to admin_comments_path(), id: 'comments', class: link_class, style: 'padding: 12px 0;' do %>
      <div class="text-center" style="width: 32px">
        <i class="fas fa-comment-alt"></i>
      </div>
      <%= t('.comments') %>
    <% end %>
    <% spam_class = link_class %>
    <% spam_class += ' text-danger' if @spams.count.positive? %>
    <%= link_to admin_spam_path(), id: 'spam', class: spam_class, style: 'padding: 12px 0;' do %>
      <div class="text-center" style="width: 32px">
        <i class="fas fa-times-circle"></i>
      </div>
      <%= t('.spam') %>
    <% end %>
    <%= link_to new_page_path(), id: 'spam', class: link_class, style: 'padding: 12px 0;' do %>
      <div class="text-center" style="width: 32px">
        <i class="fas fa-file-alt"></i>
      </div>
      <%= t('.new_page') %>
    <% end %>
  </div>
</div>
