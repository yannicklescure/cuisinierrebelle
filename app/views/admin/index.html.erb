<div class="row m-0 admin-dashboard">
  <div class="col-2 vh-100 border-right">
    <!-- MENU -->
  </div>
  <div class="col-10">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th scope="col"><%= t('.full_name') %></th>
            <th scope="col"><%= t('.email') %></th>
            <th scope="col"><%= t('.followers') %></th>
            <th scope="col"><%= t('.following') %></th>
            <th scope="col"><%= t('.published_recipes') %></th>
            <th scope="col"><%= t('.comments') %></th>
            <th scope="col"><%= t('.likes') %></th>
            <th scope="col"><%= t('.bookmarks') %></th>
          </tr>
        </thead>
        <tbody>
        <% @users.sort_by { |date| date.created_at }.reverse.map do |user| %>
          <tr>
            <td><%= link_to user.name.capitalize, user_path(user) %></td>
            <td><%= user.email %></td>
            <td><%= user.followers.count %></td>
            <td><%= user.following.count %></td>
            <td><%= user.recipes.count %></td>
            <td><%= user.comments.count + user.replies.count %></td>
            <td><%= user.likes.count %></td>
            <td><%= user.bookmarks.count %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
