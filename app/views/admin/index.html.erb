<div class="admin-dashboard">
  <div class="row">
    <div class="col-2 border rounded m-3 p-3">
      <div class="d-flex flex-column">
        <div class="d-flex w-100">
          <div class="w-50 font-weight-bold"><%= t('.users') %></div>
          <div><%= @users.count %></div>
        </div>
        <div class="d-flex w-100">
          <div class="w-50 font-weight-bold"><%= t('.recipes') %></div>
          <div><%= @recipes.count %></div>
        </div>
        <div class="d-flex w-100">
          <div class="w-50 font-weight-bold"><%= t('.comments') %></div>
          <div><%= @comments.count + @replies.count %></div>
        </div>
      </div>
    </div>
  </div>
</div>
