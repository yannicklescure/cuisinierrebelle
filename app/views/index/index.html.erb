<% unless @results[:user].nil? && @results[:recipe].nil? %>
  <% unless @results[:user].nil? %>
    <div class="container my-5">
      <% @results[:user].sort_by { |date| date.created_at }.reverse.each do |user| %>
        <div class="d-flex <%= 'w-50 mx-auto' if !client.device_type.nil? && client.device_type.match(/desktop/) %> align-items-center mb-3">
          <img src="<%= user.image.thumb.url %>" width="24px" height="24px" class="rounded-circle mr-2" style="object-fit: cover;"><%= render user %>
        </div>
      <% end %>
    </div>
  <% end %>
  <% unless @results[:recipe].nil? %>
    <%= render 'shared/recipes', recipes: @results[:recipe] %>
  <% end %>
<% else %>
<div class="container-fluid">
  <div class="py-3 d-flex align-items-center">
    <i class="material-icons md-24 mt-n1 pr-3">error</i>
    <div><%= t('.result_not_found', query: @query) %></div>
  </div>
  <div class="mt-3"><strong><%= t('.recent_recipes') %></strong></div>
</div>
<%= render 'shared/recipes', recipes: @recipes %>
<% end %>
