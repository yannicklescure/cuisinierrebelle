<div class="container my-5">
  <h2>Published recipes</h2>
  <table class="table">
  <thead>
    <tr>
      <th scope="col"><%= t('.recipe') %></th>
      <th scope="col"><%= t('.date') %></th>
      <th scope="col"><%= t('.likes') %></th>
      <th scope="col"><%= t('.comments') %></th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.sort_by { |date| date.created_at }.reverse.each do |recipe| %>
      <tr>
        <td scope="row"><a href="<%= recipe_path(recipe) %>"><%= recipe.title %></a></td>
        <td><%= recipe.created_at %></td>
        <td><%= recipe.likes.count %></td>
        <td><%#= recipe.comments.count %>123456</td>
      </tr>
    <% end %>
  </table>
</div>
