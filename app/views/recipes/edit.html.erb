<div class="container my-5">
  <%= simple_form_for(@recipe) do |f| %>
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :video %>
    <%= f.input :image %>
    <%= f.input :ingredients %>
    <%= f.input :direction %>
    <%= f.input :description %>
    <%= f.submit class: "btn btn-secondary" %>
  <% end %>
</div>
