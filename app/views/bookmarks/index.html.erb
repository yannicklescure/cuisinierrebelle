<div class="container-fluid">
  <% if @bookmarks.size.positive? %>
    <div class="row py-3">
    <% @bookmarks.sort.each do |bookmark| %>
    <%= render "shared/card", recipe: bookmark.recipe %>
    <% end %>
    </div>
  <% else %>
  <div class="row">
    <p class="mx-auto"><%= t('.no_bookmarks_html') %></p>
  </div>
  <% end %>
</div>
