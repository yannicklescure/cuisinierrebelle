if(<%= @admin %>) {
  <% unless @replies_spam.nil? %>
    <% @replies_spam.each do |reply| %>
      // console.log(`#reply-${<%= reply.id %>}`);
      reply = document.querySelector(`#reply-${<%= reply.id %>}`);
      if(reply) reply.remove();
    <% end %>
  <% end %>
  <% if @spams.count == 1 %>
  navbarBtn = document.querySelector('#spam');
  if(navbarBtn) navbarBtn.classList.remove('text-danger');
  <% end %>
  // console.log(`#comment-${<%= @comment.id %>}`);
  comment = document.querySelector(`#comment-${<%= @comment.id %>}`);
  if(comment) comment.remove();
} else {
  <% binding.pry %>
  commentsCount = document.querySelector('#comments-count');
  <% count = 0 %>
  <% @comment.replies.select{ |reply| !reply.spam }.each { |r| count += 1 } %>
  <% count += 1 %>
  console.log(`count: ${<%= count %>}`);
  if(commentsCount) commentsCount.innerHTML = `<%= t('.comments', count: count) %>`;
  comment = document.querySelector(`#comment-${<%= @comment.id %>}`);
  if(comment) comment.remove();
}
