<% if user_signed_in? %>
<div id="navbar-bottom" class="fixed-bottom d-flex border-top justify-content-between align-items-center bg-white py-2 px-5">
  <a id="home" href="<%= root_path %>" class="navbar-bottom-btn <%= current_page?(root_path) ? 'text-body' : 'text-muted' %> text-decoration-none"><span class="material-icons md-24 d-flex">home</span></a>
  <a id="whatshot" href="<%= top_100_path %>" class="navbar-bottom-btn <%= current_page?(top_100_path) ? 'text-body' : 'text-muted' %> text-decoration-none"><span class="material-icons md-24 d-flex">whatshot</span></a>
  <a id="new-recipe" href="<%= new_recipe_path %>" class="navbar-bottom-btn <%= current_page?(new_recipe_path) ? 'text-body' : 'text-muted' %> text-decoration-none"><span class="material-icons md-24 d-flex">add_box</span></a>
  <a id="bookmarks" href="<%= user_bookmarks_path(current_user) %>" class="navbar-bottom-btn <%= current_page?(user_bookmarks_path(current_user)) ? 'text-body' : 'text-muted' %> text-decoration-none"><span class="material-icons md-24 d-flex">bookmarks</span></a>
  <a href="<%= user_path(current_user) %>" class="text-decoration-none"><img id="user" src="<%= current_user.image.thumb.url %>" width="24" height="24" class="navbar-bottom-btn <%= current_page?(user_path(current_user)) ? 'border-dark' : 'border-secondary' %> border rounded-circle"></a>
</div>
<% end %>
