<!-- Modal -->
<div class="modal fade" id="modalMenuCenter" tabindex="-1" role="dialog" aria-labelledby="modalMenuCenter" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="d-flex flex-column align-items-start">
          <button type="button" class="close d-none" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <!-- <a href="<%= index_index_path %>" class="d-flex py-2 w-100 modal-menu-link"><%= t(".index") %></a> -->
          <a href="<%= top_100_path %>" class="d-flex py-2 w-100 modal-menu-link"><%= t(".top_100") %></a>
          <a href="<%= tools_path %>" class="d-flex py-2 w-100 modal-menu-link"><%= t(".tools") %></a>
          <a href="<%= conversion_path %>" class="d-flex py-2 w-100 modal-menu-link"><%= t(".conversion") %></a>
          <% if user_signed_in? %>
            <%= link_to t(".bookmarks"), user_bookmarks_path(current_user), class: "d-flex py-2 w-100 modal-menu-link" %>
            <%= link_to t(".recipes"), user_recipes_path(current_user), class: "d-flex py-2 w-100 modal-menu-link" %>
            <%= link_to t(".new_recipe"), new_recipe_path, class: "d-flex py-2 w-100 modal-menu-link" %>
          <% end %>
          <% if user_signed_in? %>
            <%= link_to t(".following"), user_following_path(current_user), class: "d-flex py-2 w-100 modal-menu-link" %>
            <%= link_to t(".settings"), user_settings_path(current_user), class: "d-flex py-2 w-100 modal-menu-link" %>
          <% end %>
          <% if !user_signed_in? %>
            <%# if current_user.locale.nil? %>
              <a class="d-flex py-2 w-100 modal-menu-link text-decoration-none" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                <%= t('.languages') %>
              </a>
              <div class="collapse" id="collapseExample">
                <div class="d-flex flex-column align-items-start ml-3">
                  <!-- <a class="d-flex py-2 w-100 modal-menu-link" href="/">English</a> -->
                  <%= link_to raw("English"), current_page_params.merge(locale: :en), class: "d-flex py-2 w-100 modal-menu-link" %>
                  <%= link_to raw("Espa&ntilde;ol"), current_page_params.merge(locale: :es), class: "d-flex py-2 w-100 modal-menu-link" %>
                  <%= link_to raw("Fran&ccedil;ais"), current_page_params.merge(locale: :fr), class: "d-flex py-2 w-100 modal-menu-link" %>
                </div>
              </div>
            <%# end %>
          <% end %>
          <% if user_signed_in? %>
            <%= link_to t(".log_out"), destroy_user_session_path, data: { confirm: t(".are_you_sure") }, method: :delete, class: "d-flex py-2 w-100 modal-menu-link" %>
          <% else %>
            <%= link_to t(".sign_in"), new_user_session_path, class: "d-flex py-2 w-100 modal-menu-link" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
