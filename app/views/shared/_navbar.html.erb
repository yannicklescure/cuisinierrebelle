<!-- 'smartphone' -->
<%# client = DeviceDetector.new(request.user_agent) %>
<%#= client.device_type %>
<% if client.device_type == 'smartphone' %>
<div class="d-md-none">
  <div id="navbar-search" class="d-none navbar navbar-expand-sm navbar-light navbar-cuisinierrebelle fixed-top">
    <div class="col pr-0">
      <%= render 'index/form' %>
    </div>
    <div id="search-btn-back" class="btn text-muted"><i class="fas fa-undo-alt"></i></div>
  </div>
  <div id="navbar-main" class="navbar navbar-expand-sm navbar-light navbar-cuisinierrebelle fixed-top">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%#= image_tag "URL_TO_IMAGE", class: "rounded-circle" %>
      <%= t('.cuisinier_rebelle_html') %>
    <% end %>
    <!-- Button trigger modal -->
    <div class="d-flex">
        <a id="search-btn" class="btn text-muted" href="#"><%= t('.search_btn_html') %></a>
        <a class="btn text-muted" href="#" data-toggle="modal" data-target="#modalMenuCenter"><i class="fas fa-ellipsis-v"></i></a>
    </div>
    <ul class="d-none navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="#"><%= t('.search_btn_html') %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#" data-toggle="modal" data-target="#modalMenuCenter"><i class="fas fa-ellipsis-v"></i></a>
      </li>
    </ul>
  </div>
  <%= render 'shared/navbar-small' %>
</div>
<% else %>
<div class="d-none d-md-block">
  <%= render 'shared/navbar-large' %>
</div>
<% end %>
