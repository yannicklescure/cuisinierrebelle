<div class="col-md-4 col-lg-3 col-xl-2">
  <div class="card border-0">
    <div class="card-img-top d-flex justify-content-center align-items-center" style="background-image: url('<%= image_path product.photo.url(:card), secure: true, height: 300, width: 400 %>');"></div>
    <div class="d-flex align-items-start justify-content-between py-3">
      <div class="d-flex flex-column">
        <p class="m-0 font-weight-bold"><%= product.title %></p>
        <p class="m-0 small"><%= product.description %></p>
      </div>
      <% if user_signed_in? && current_user.admin %>
        <%= link_to t('.edit'), edit_product_path(product), class: 'btn btn-sm btn-warning' %>
      <% else %>
        <%= link_to t('.more_details_html').html_safe, product.url, class: 'btn btn-sm btn-info', target: '_blank' %>
      <% end %>
    </div>
  </div>
</div>
