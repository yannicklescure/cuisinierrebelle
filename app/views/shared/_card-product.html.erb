<div class="col-md-4 col-lg-3 col-xl-2">
  <div class="card border-0">
    <div class="card-img-top d-flex justify-content-center align-items-center" style="background-image: url('<%= image_path product.photo.url(:card), secure: true, height: 300, width: 400 %>');"></div>
    <div class="d-flex flex-column align-items-start justify-content-between py-3">
      <div class="d-flex w-100 align-items-start justify-content-between">
        <span class="m-0 font-weight-bold"><%= product.title %></span>
      </div>
      <div class="m-0 small py-3"><%= product.description %></div>
      <div class="d-flex w-100 align-items-start justify-content-between">
      <% if user_signed_in? && !user_view %>
        <%= link_to t('.edit_html'), edit_product_path(product), class: 'small text-nowrap text-decoration-none text-body' %>
      <% else %>
        <%= link_to t('.more_details_html'), product.url, class: 'small text-nowrap text-decoration-none text-body', target: '_blank' %>
      <% end %>
      </div>
    </div>
  </div>
</div>
