              </div>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link" href="#" role="button" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-ellipsis-v"></i>
              </a>
              <div class="dropdown-menu dropdown-menu-md-right" aria-labelledby="navbarDropdown">
                <%= link_to t(".new_recipe"), new_recipe_path, class: "dropdown-item" %>
                <%= link_to t(".recipes"), recipes_path, class: "dropdown-item" %>
                <%#= link_to t(".followers"), followers_path, class: "dropdown-item" %>
                <%= link_to t(".following"), following_index_path, class: "dropdown-item" %>
                <%= link_to t(".settings"), user_path(current_user), class: "dropdown-item" %>
                <%= link_to t(".log_out"), destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            <li class="nav-item"><%= link_to raw("English"), current_page_params.merge(locale: :en), class: "nav-link" %></li>
            <li class="nav-item"><%= link_to raw("Fran&ccedil;ais"), current_page_params.merge(locale: :fr), class: "nav-link" %></li>
            <li class="nav-item"><%= link_to raw("Espa&ntilde;ol"), current_page_params.merge(locale: :es), class: "nav-link" %></li>
            <li class="nav-item"><%= link_to t(".sign_in"), new_user_session_path, class: "nav-link" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
