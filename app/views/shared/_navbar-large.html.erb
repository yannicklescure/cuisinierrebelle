<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <i class="fas fa-utensils"></i>&nbsp;<%= t('.cuisinier_rebelle') %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="d-flex w-100 justify-content-md-between flex-column flex-md-row">
      <div class="order-1 order-sm-0 d-flex align-items-center">
        <ul class="navbar-nav">
          <li class="nav-item"><a href="<%= index_index_path %>" class="nav-link"><%= t(".index") %></a></li>
          <li class="nav-item"><a href="<%= tools_path %>" class="nav-link"><%= t(".tools") %></a></li>
          <li class="nav-item"><a href="<%= conversion_path %>" class="nav-link"><%= t(".conversion") %></a></li>
        </ul>
      </div>
      <div class="order-0 order-sm-1">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item"><%= link_to t('.bookmarks'), bookmarks_path, class: "nav-link bookmarks" %></li>
            <li class="nav-item"><%= link_to t('.inbox'), "#", class: "nav-link" %></li>
            <li class="nav-item dropdown">
              <a class="nav-link" href="#" role="button" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= t('.languages_html') %>
              </a>
              <div class="dropdown-menu dropdown-menu-md-right" aria-labelledby="navbarDropdown">
                <%= link_to raw("English"), current_page_params.merge(locale: :en), class: "dropdown-item" %>
                <%= link_to raw("Fran&ccedil;ais"), current_page_params.merge(locale: :fr), class: "dropdown-item" %>
